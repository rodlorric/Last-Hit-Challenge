<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/pickscreen.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/pickscreen.js" />
	</scripts>
	<Panel class="PickScreenRoot" hittest="false">
		<Panel class="PickScreenPanel">
			<Label text="#pickscreen_choose_hero"/>
			<Panel class="HeroPanelContainer">
				<Panel class="HeroPanel">
					<Button id="satyr" class="PickButton" onactivate="OnPickSatyr(); OnPick();">
						<Panel class="Column">
							<Label text="#npc_dota_hero_jakiro"/>
							<Panel id="satyr_img"/>
						</Panel>
				  	</Button>
				</Panel>
				<Panel class="HeroPanel">
					<Button id="nevermore" class="PickButton" onactivate="OnPickNevermore(); OnPick();">
						<Panel class="Column">
							<Label text="#npc_dota_hero_nevermore"/>
							<Panel id="nevermore_img"/>
						</Panel>
				  	</Button>				
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>