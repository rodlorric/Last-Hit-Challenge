<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/pickscreen.css" />
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/pickscreen.js" />
	</scripts>
	<Panel class="PickScreenRoot" hittest="false">
		<Panel class="PickScreenPanel" hittest="false">
			<Label text="#pickscreen_choose_hero"/>
			<Panel class="PickPanelContainer">
				<Panel class="PickPanel">
					<Panel class="PickOptionsPanel">
						<ToggleButton id="disable_leveling" class="OptionButton" text="#pickscreen_disable_leveling" 
							onmouseover="LevelingShowTooltip()"
							onmouseout="LevelingHideTooltip()"/>
					</Panel>
				</Panel>
				<Panel class="VertBar"/>
				<Panel class="PickPanel">					
					<Panel class="ShadowFiendBg"/>
					<Button id="five_min" class="PickButton" onactivate="OnPickNevermore(); OnPick();">
						<Panel class="Column">
							<Label text="#npc_dota_hero_nevermore"/>
						</Panel>
				  	</Button>
				</Panel>
				<Panel class="VertBar"/>
				<Panel class="PickPanel">
					<Panel class="SatyrBg"/>
					<Button id="seven_n_half_min" class="PickButton" onactivate="OnPickSatyr(); OnPick();">
						<Panel class="Column">
							<Label text="#npc_dota_hero_jakiro"/>
						</Panel>
				  	</Button>
				</Panel>
				<Panel class="VertBar"/>
				<Panel class="PickPanel"/>
			</Panel>
		</Panel>
	</Panel>
</root>