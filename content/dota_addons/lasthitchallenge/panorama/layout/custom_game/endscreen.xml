<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/endscreen.css"/>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/endscreen.js" />
  </scripts>
  <Panel class="EndScreenRoot" hittest="false">
  	<Panel id="end_screen_panel" class="EndScreenPanel" hittest="false">
	 	<Panel class="EndScreenPanelContainer">
		  		<Panel class="Header">
			  		<Label text="#endcreen_title"/>
			  	</Panel>
			  	<Panel class="Category">
			  			<Label text="#endscreen_totals"/>
					 	<Panel class="RowHeader">
					 		<Label text="#endscreen_creep_score"/>
					 		<Panel class="VertBar"/>
					 		<Button id="stats_lasthits" class="RowButton" onactivate="OnMagnifyLastHits()">					 			
					 			<Label text="#endscreen_last_hits">
					 				<Panel class="MagnifierIcon"/>
					 			</Label>
					 		</Button>
					 		<Panel class="VertBar"/>
					 		<Button id="stats_denies" class="RowButton" onactivate="OnMagnifyDenies()">					 			
					 			<Label text="#endscreen_denies">
					 				<Panel class="MagnifierIcon"/>
					 			</Label>
					 		</Button>
					 		<Panel class="VertBar"/>
					 		<Button id="stats_misses" class="RowButton" onactivate="OnMagnifyMisses()">					 			
					 			<Label text="#endscreen_misses">
					 				<Panel class="MagnifierIcon"/>
					 			</Label>
					 		</Button>
					 		<Panel class="VertBar"/>
					 		<Label text="#endscreen_accuracy"/>
					 	</Panel>
					 	<Panel class="Row">
					 		<Label id="stats_total_cs" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_total_lh" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_total_dn" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_total_miss" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_total_accuracy" text="0%"/>
					 	</Panel>
				</Panel>
				<Panel class="HorBar"/>
				<Panel class="Category">
					 	<Label text="#endscreen_streaks"/>
					 	<Panel class="RowHeader">
					 		<Label text="#endscreen_creep_score"/>
					 		<Panel class="VertBar"/>
					 		<Label text="#endscreen_last_hits"/>
					 		<Panel class="VertBar"/>
					 		<Label text="#endscreen_denies"/>
					 	</Panel>
					 	<Panel class="Row">
					 		<Label id="stats_streak_cs" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_streak_lh" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_streak_dn" text="0"/>
					 	</Panel>
				</Panel>
				<Panel class="HorBar"/>
				<Panel class="Category">
					 	<Label text="#endscreen_session_records"/>
					 	<Panel class="RowHeader">
					 		<Label text="#endscreen_creep_score"/>
					 		<Panel class="VertBar"/>
					 		<Label text="#endscreen_last_hits"/>
					 		<Panel class="VertBar"/>
					 		<Label text="#endscreen_denies"/>
					 		<Panel class="VertBar"/>
					 		<Label id="acc_record" text="#endscreen_acc_record"/>
					 	</Panel>
					 	<Panel class="Row">
					 		<Label id="stats_record_cs" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_record_lh" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_record_dn" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_record_accuracy" text="0%"/>
					 	</Panel>
				</Panel>
				<Panel class="HorBar"/>
				<Panel class="Category">
					 	<Label text="#endscreen_time"/>
					 	<Panel class="RowHeader">
					 		<Label text="#endscreen_total_time_spent"/>
					 		<Panel class="VertBar"/>
					 		<Label text="#endscreen_shortest_try"/>
					 		<Panel class="VertBar"/>
					 		<Label text="#endscreen_longest_try"/>
					 	</Panel>
					 	<Panel class="Row">
					 		<Label id="stats_time_spent" text="00:00"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_time_shortest" text="00:00"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_time_longest" text="00:00"/>
					 	</Panel>
				</Panel>
				<Panel class="HorBar"/>
				<Panel class="Category">
					 	<Label text="#endscreen_misc"/>
					 	<Panel class="RowHeader">
					 		<Label text="#endscreen_restarts"/>
					 		<Panel class="VertBar"/>
					 		<Label text="#endscreen_session_accuracy"/>
					 	</Panel>
					 	<Panel class="Row">
					 		<Label id="stats_misc_restart" text="0"/>
					 		<Panel class="VertBar"/>
					 		<Label id="stats_misc_session_accuracy" text="0%"/>
					 	</Panel>
				</Panel>
				<Panel class="HorBar"/>
				<Panel class="Category">
				 	<Label text="#endscreen_graph"/>
				 	<Panel class="Row">
				 		<Panel class="YLeyendPanel">
					 		<Panel class="LHLeyend">
					 			<Label id="LeyendLabel" text="#endscreen_lh"/>
					 		</Panel>				 						 		
					 		<Panel class="DNLeyend">
					 			<Label id="LeyendLabel" text="#endscreen_dn"/>
					 		</Panel>
				 		</Panel>
				 		<Panel class="VertBar" style="margin-bottom: 15px;"/>
				 		<Panel id="graph_container" class="GraphContainer"/>
				 	</Panel>
			 		<Panel class="Row">
			 			<Panel id="x_leyend" class="XLeyendPanel"/>
			 		</Panel>
				</Panel>
				<Panel class="HorBar"/>
		 		<Panel class="ButtonPanel">
		 			<Button class="OptionButton" onactivate="OnPickButton()">
			  			<Label text="#pick"/>
			  		</Button>	  			
			  		<Button class="OptionButton" onactivate="OnRestart()">
			  			<Label text="#restart"/>
			  		</Button>
			  		<Button class="OptionButton" onactivate="OnQuit()">
			  			<Label text="#quit"/>
			  		</Button>
		  		</Panel>	
			</Panel>
		</Panel>		
  </Panel>
</root>