<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/options.css"/>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/options.js" />
  </scripts>
  <Panel class="CustomHudRoot" hittest="false">
  	<Panel id="control_panel" class="ControlPanel" hittest="false">
  		<Button id="ControlPanelSlideThumb" onactivate="OnClick()">
			<Panel class="RightArrowButtonIcon"/>
		</Button>
	 	<Panel class="ControlPanelContainer">
		  	<Panel id="Maximized">
		  		<Panel class="MinimizeButton">
			  		<Label text="Records"/>
			  	</Panel>
			  	<Panel class="Category">
				 	<Label text="Creep Score:"/>
				 	<Label id="cs" text="0"/>
				 	<Label text="Last Hits:"/>
				 	<Label id="lh" text="0"/>
				 	<Label text="Denies:"/>
				 	<Label id="dn" text="0"/>
				</Panel>
				<Panel class="MinimizeButton">
					<Label text="Accuracy"/>
				</Panel>
				<Panel class="Category">
				 	<Label text="Last Hit:"/>
				 	<Label id="lh_accuracy" text="100%"/>
				 	<Label text="Deny:"/>
				 	<Label id="dn_accuracy" text="100%"/>
				 	<Label text="Total:"/>
				 	<Label id="cs_accuracy" text="100%"/>
				</Panel>
				<Panel class="MinimizeButton">
					<Label text="Options"/>
				</Panel>
				<Panel class="Category">
				  	<ToggleButton id="hide_overlay" class="OptionButton" text="Hide Help" onactivate="OnToggle()"/>				  			
			  		<Button class="OptionButton" onactivate="OnRestartButton()">
			  			<Label text="Restart"/>
			  		</Button>
			  		<Button class="OptionButton" onactivate="OnQuitButton()">
			  			<Label text="Quit"/>
			  		</Button>
				</Panel>
			</Panel>
		</Panel>		
	</Panel>
  </Panel>
</root>